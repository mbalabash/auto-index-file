{
  "name": "auto-index-file",
  "version": "0.1.0",
  "description": "Generate index.js file from target directories.",
  "scripts": {
    "start": "node -r esm ./index.js",
    "eslint": "eslint ./src --cache --fix",
    "test": "ava"
  },
  "dependencies": {
    "acorn-loose": "^6.0.0",
    "esm": "^3.0.84"
  },
  "devDependencies": {
    "ava": "^1.1.0",
    "eslint": "^5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js)": [
      "yarn eslint",
      "git add"
    ]
  },
  "keywords": [
    "index file",
    "index.js",
    "js",
    "components",
    "atomic design"
  ],
  "author": "mbalabash",
  "license": "MIT"
}
